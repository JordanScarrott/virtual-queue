{
  "name": "headless-virtual-queue",
  "version": "0.1.0",
  "tasks": {
    "start": "deno run --allow-net src/main.ts",
    "dev": "deno run --watch --allow-net src/main.ts",
    "test": "deno test",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true
    }
  }
}
